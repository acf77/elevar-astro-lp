---
type Props = {
  size?: "heavy";
  href?: string;
};

const { size, href } = Astro.props as Props;

const fontType = size === "heavy" ? "Metropolis Bold" : "Metropolis Light";
---

<a href={href}>
  <slot />
</a>

<style define:vars={{ fontType }}>
  a {
    font-family: var(--fontType);
    line-height: 30px;
    text-decoration: none;
    color: black;
    align-self: center;
    font-size: 12px;
  }
  a:hover {
    color: --color-primary;
  }
  .light {
    font-weight: 400;
  }

  .heavy {
    font-weight: 600;
  }
</style>
